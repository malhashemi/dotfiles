[user]
	name = "{{ .user.name }}"
	email = "{{ .user.email }}"

[core]
	editor = nvim
	pager = delta
	autocrlf = input
	whitespace = trailing-space,space-before-tab

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[fetch]
	prune = true

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = log --graph --oneline --all
	amend = commit --amend --no-edit
	undo = reset --soft HEAD~1

[diff]
	tool = nvimdiff
	colorMoved = default

[merge]
	tool = nvimdiff
	conflictstyle = diff3

{{ if eq .chezmoi.os "darwin" }}
[credential]
	helper = osxkeychain
{{ end }}

[delta]
	navigate = true
	line-numbers = true
	syntax-theme = Catppuccin-mocha
	side-by-side = false

[color]
	ui = auto
