{
  "experimental": {
    "disable_paste_summary": true
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-sonnet-4-5-20250929": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 31999
            }
          }
        },
        "claude-opus-4-1-20250805": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        }
      }
    }
  },
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "brave-search": {
      "type": "local",
      "command": ["npx", "-y", "@brave/brave-search-mcp-server"],
      "enabled": true,
      "environment": {
        "BRAVE_API_KEY": "{env:BRAVE_API_KEY}"
      }
    },
    "exa": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "exa-mcp-server@2.0.5",
        "--tools=web_search_exa,get_code_context_exa,crawling,deep_researcher_start,deep_researcher_check"
      ],
      "enabled": true,
      "environment": {
        "EXA_API_KEY": "{env:EXA_API_KEY}"
      }
    }
  },
  "tools": {
    "brave-search*": false,
    "exa*": false
  }
}
