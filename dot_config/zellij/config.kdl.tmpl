// Zellij Configuration
// ~/.config/zellij/config.kdl

// Theme - Dynamic from theme system
// Uses unique theme name per color change to force Zellij hot-reload
{{- $themeName := "mocha" }}
{{- $dynamicId := "" }}
{{- if hasKey . "theme" }}
{{- $themeName = .theme.name }}
{{- if .theme.last_updated }}{{ $dynamicId = .theme.last_updated | sha256sum | trunc 8 }}{{ end }}
{{- end }}
{{- if eq $themeName "dynamic" }}
theme "dynamic-{{ $dynamicId }}"
{{- else }}
theme "catppuccin-{{ $themeName }}"
{{- end }}

{{- /* Dynamic theme defined INLINE for hot-reload support */}}
{{- /* Unique theme name per update forces Zellij to reload colors */}}
{{- if and (hasKey . "theme") (eq $themeName "dynamic") }}
{{- $mat := .theme.material }}
{{- /* Detect light/dark mode by checking background brightness */}}
{{- /* Light mode: first hex char >= 7 (e.g., #7xxxxx, #8xxxxx, #fxxxxx) */}}
{{- $bgHex := $mat.background | default "#1e1e2e" | trimPrefix "#" }}
{{- $firstChar := $bgHex | substr 0 1 | lower }}
{{- $isLight := or (eq $firstChar "7") (eq $firstChar "8") (eq $firstChar "9") (eq $firstChar "a") (eq $firstChar "b") (eq $firstChar "c") (eq $firstChar "d") (eq $firstChar "e") (eq $firstChar "f") }}
themes {
    dynamic-{{ $dynamicId }} {
        bg "{{ $mat.background | default "#1e1e2e" }}"
        {{- if $isLight }}
        fg "{{ $mat.outline | default "#cdd6f4" }}"
        {{- else }}
        fg "{{ $mat.primary | default "#cdd6f4" }}"
        {{- end }}
        red "{{ $mat.error | default "#f38ba8" }}"
        green "{{ $mat.primary | default "#a6e3a1" }}"
        yellow "{{ $mat.primary | default "#f9e2af" }}"
        blue "{{ $mat.primary | default "#89b4fa" }}"
        magenta "{{ $mat.primary | default "#cba6f7" }}"
        cyan "{{ $mat.primary | default "#94e2d5" }}"
        orange "{{ $mat.primary | default "#fab387" }}"
        black "{{ $mat.scrim | default "#11111b" }}"
        white "{{ $mat.on_surface | default "#cdd6f4" }}"
    }
}
{{- end }}

// Default shell
default_shell "zsh"

// Pane frames - disabled for cleaner look
pane_frames false

// Simplified UI - false to show keybindings in status bar when in modes
simplified_ui false

// Mouse support
mouse_mode true

// Scrollback buffer
scroll_buffer_size 10000

// Copy behavior
{{- if .is_headless }}
// Headless: no copy_command = use OSC 52 passthrough to terminal
copy_on_select true
{{- else if eq .chezmoi.os "darwin" }}
copy_command "pbcopy"
copy_clipboard "system"
copy_on_select true
{{- else }}
copy_command "wl-copy"  // For Wayland; use "xclip -selection clipboard" for X11
copy_clipboard "system"
copy_on_select true
{{- end }}

// Session serialization
session_serialization true
serialize_pane_viewport true

// Default layout - use "default" for keybinding hints, "compact" for minimal
default_layout "default"

// Mirror session (useful for pair programming)
mirror_session false

// Keybindings
keybinds clear-defaults=true {
    // Normal mode
    normal {
        // Pane navigation (Ctrl + hjkl)
        bind "Ctrl h" { MoveFocus "Left"; }
        bind "Ctrl j" { MoveFocus "Down"; }
        bind "Ctrl k" { MoveFocus "Up"; }
        bind "Ctrl l" { MoveFocus "Right"; }
        
        // Quick actions
        bind "Ctrl n" { NewPane; }
        bind "Ctrl t" { NewTab; }
        bind "Ctrl w" { CloseFocus; }
        bind "Ctrl q" { Quit; }
        
        // Mode switching
        bind "Ctrl p" { SwitchToMode "Pane"; }
        bind "Ctrl r" { SwitchToMode "Resize"; }
        bind "Ctrl s" { SwitchToMode "Scroll"; }
        bind "Ctrl o" { SwitchToMode "Session"; }
        bind "Ctrl b" { SwitchToMode "Tmux"; }  // tmux-like prefix
        
        // Help - show keybindings configuration (F1 or Alt+/)
        bind "F1" "Alt /" { 
            LaunchOrFocusPlugin "zellij:configuration" {
                floating true
                move_to_focused_tab true
            };
        }
        
        // Tab navigation
        bind "Alt 1" { GoToTab 1; }
        bind "Alt 2" { GoToTab 2; }
        bind "Alt 3" { GoToTab 3; }
        bind "Alt 4" { GoToTab 4; }
        bind "Alt 5" { GoToTab 5; }
        bind "Alt h" { GoToPreviousTab; }
        bind "Alt l" { GoToNextTab; }
    }
    
    // Pane mode
    pane {
        bind "Esc" { SwitchToMode "Normal"; }
        bind "h" { MoveFocus "Left"; }
        bind "j" { MoveFocus "Down"; }
        bind "k" { MoveFocus "Up"; }
        bind "l" { MoveFocus "Right"; }
        bind "n" { NewPane; SwitchToMode "Normal"; }
        bind "d" { NewPane "Down"; SwitchToMode "Normal"; }
        bind "r" { NewPane "Right"; SwitchToMode "Normal"; }
        bind "x" { CloseFocus; SwitchToMode "Normal"; }
        bind "f" { ToggleFocusFullscreen; SwitchToMode "Normal"; }
        bind "z" { TogglePaneFrames; SwitchToMode "Normal"; }
        bind "w" { ToggleFloatingPanes; SwitchToMode "Normal"; }
        bind "e" { TogglePaneEmbedOrFloating; SwitchToMode "Normal"; }
    }
    
    // Resize mode
    resize {
        bind "Esc" { SwitchToMode "Normal"; }
        bind "h" { Resize "Increase Left"; }
        bind "j" { Resize "Increase Down"; }
        bind "k" { Resize "Increase Up"; }
        bind "l" { Resize "Increase Right"; }
        bind "H" { Resize "Decrease Left"; }
        bind "J" { Resize "Decrease Down"; }
        bind "K" { Resize "Decrease Up"; }
        bind "L" { Resize "Decrease Right"; }
        bind "=" { Resize "Increase"; }
        bind "-" { Resize "Decrease"; }
    }
    
    // Scroll mode
    scroll {
        bind "Esc" { SwitchToMode "Normal"; }
        bind "j" { ScrollDown; }
        bind "k" { ScrollUp; }
        bind "Ctrl d" { HalfPageScrollDown; }
        bind "Ctrl u" { HalfPageScrollUp; }
        bind "d" { HalfPageScrollDown; }
        bind "u" { HalfPageScrollUp; }
        bind "/" { SwitchToMode "EnterSearch"; SearchInput 0; }
    }
    
    // Search mode
    entersearch {
        bind "Esc" { SwitchToMode "Scroll"; }
        bind "Enter" { SwitchToMode "Search"; }
    }
    
    search {
        bind "Esc" { SwitchToMode "Scroll"; }
        bind "n" { Search "down"; }
        bind "N" { Search "up"; }
    }
    
    // Session mode
    session {
        bind "Esc" { SwitchToMode "Normal"; }
        bind "d" { Detach; }
        bind "w" {
            LaunchOrFocusPlugin "zellij:session-manager" {
                floating true
                move_to_focused_tab true
            };
            SwitchToMode "Normal"
        }
    }
    
    // Tmux-like mode (Ctrl+b prefix)
    tmux {
        bind "Esc" { SwitchToMode "Normal"; }
        bind "[" { SwitchToMode "Scroll"; }
        bind "Ctrl b" { Write 2; SwitchToMode "Normal"; }  // Send Ctrl+b
        bind "\"" { NewPane "Down"; SwitchToMode "Normal"; }
        bind "%" { NewPane "Right"; SwitchToMode "Normal"; }
        bind "z" { ToggleFocusFullscreen; SwitchToMode "Normal"; }
        bind "c" { NewTab; SwitchToMode "Normal"; }
        bind "," { SwitchToMode "RenameTab"; }
        bind "p" { GoToPreviousTab; SwitchToMode "Normal"; }
        bind "n" { GoToNextTab; SwitchToMode "Normal"; }
        bind "h" { MoveFocus "Left"; SwitchToMode "Normal"; }
        bind "j" { MoveFocus "Down"; SwitchToMode "Normal"; }
        bind "k" { MoveFocus "Up"; SwitchToMode "Normal"; }
        bind "l" { MoveFocus "Right"; SwitchToMode "Normal"; }
        bind "d" { Detach; }
        bind "x" { CloseFocus; SwitchToMode "Normal"; }
    }
    
    // Shared bindings across modes
    shared_except "normal" "locked" {
        bind "Enter" { SwitchToMode "Normal"; }
        bind "Esc" { SwitchToMode "Normal"; }
    }
}

// UI configuration
ui {
    pane_frames {
        rounded_corners true
        hide_session_name true
    }
}

// Plugins
plugins {
    tab-bar { path "tab-bar"; }
    status-bar { path "status-bar"; }
    strider { path "strider"; }
    compact-bar { path "compact-bar"; }
    session-manager { path "session-manager"; }
}
