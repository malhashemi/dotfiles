{
  "default_agent": "researcher",
  "theme": "dynamic",
  "experimental": {
    "disable_paste_summary": true
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-opus-4-5": {
          "limit": {
            "context": 200000,
            "output": 200000
          },
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 128000
            }
          }
        },
        "claude-sonnet-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 31999
            }
          }
        }
      }
    },
    "google": {
      "models": {
        "gemini-3-pro": {
          "options": {
            "thinkingConfig": {
              "thinkingBudget": 31999,
              "includeThoughts": true
            }
          }
        },
        "gemini-3-pro-preview": {
          "options": {
            "thinkingConfig": {
              "thinkingBudget": 31999,
              "includeThoughts": true
            }
          }
        },
        "gemini-2.5-flash": {
          "options": {
            "thinkingConfig": {
              "thinkingBudget": 8192
            }
          }
        },
        "gemini-2.5-pro": {
          "options": {
            "thinkingConfig": {
              "thinkingBudget": 16000
            }
          }
        }
      }
    }
  },
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"{{ if .is_headless }}, "--headless"{{ end }}, "--browser", "chromium"],
      "enabled": true,
      "environment": {
        "PLAYWRIGHT_BROWSERS_PATH": "{{ .chezmoi.homeDir }}/.cache/ms-playwright"
      }
    },
    "brave-search": {
      "type": "local",
      "command": ["npx", "-y", "@brave/brave-search-mcp-server"],
      "enabled": true,
      "environment": {
        "BRAVE_API_KEY": "{env:BRAVE_API_KEY}"
      }
    },
    "exa": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "exa-mcp-server@2.0.5",
        "--tools=web_search_exa,get_code_context_exa,crawling,deep_researcher_start,deep_researcher_check"
      ],
      "enabled": true,
      "environment": {
        "EXA_API_KEY": "{env:EXA_API_KEY}"
      }
    }
  },
  "plugin": [
    "opencode-sessions",
    "opencode-anthropic-auth@0.0.8",
    "opencode-gemini-auth"
  ],
  "agent": {
    "plan": {
      "tools": {
        "skill": false
      }
    }
  },
  "tools": {
   "lsp": true,
    "brave-search*": false,
    "exa*": false,
    "playwright*": false
  },
  "permission": {
    "external_directory": "allow",
    "skill": {
      "pr-review": "allow",
      "*": "deny"
    }
  }
}

