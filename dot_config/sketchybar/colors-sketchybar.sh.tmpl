export SECONDARY="$(hex_to_argb '{{ .theme.material.secondary }}')"
export TERTIARY="$(hex_to_argb '{{ .theme.material.tertiary }}')"
export ERROR="$(hex_to_argb '{{ .theme.material.error }}')"
export SURFACE="$(hex_to_argb '{{ .theme.material.surface }}')"
export SURFACE_BRIGHT="$(hex_to_argb '{{ .theme.material.surface_bright }}')"
export SURFACE_DIM="$(hex_to_argb '{{ .theme.material.surface_dim }}')"
export OUTLINE="$(hex_to_argb '{{ .theme.material.outline }}')"
{{- else }}
# Static theme: Catppuccin {{ .theme.name | title }}
export FOREGROUND="$(hex_to_argb '{{ .theme.colors.text }}')"
export BACKGROUND="$(hex_to_argb '{{ .theme.colors.base }}')"
export PRIMARY="$(hex_to_argb '{{ .theme.colors.mauve }}')"
export SECONDARY="$(hex_to_argb '{{ .theme.colors.blue }}')"
