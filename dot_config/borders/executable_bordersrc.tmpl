#!/bin/bash
{{/* borders Configuration - Generated by theme system */}}
{{/* User preference: Mauve for static themes, Primary for dynamic */}}

{{- if eq .theme.name "dynamic" }}
{{/* Dynamic theme: Use Material Design 3 colors */}}
options=(
  style=round
  width=6.0
  hidpi=on
  active_color=0xff{{ trimPrefix "#" .theme.material.primary }}
  inactive_color=0xff{{ trimPrefix "#" .theme.material.surface_container }}
)
{{- else }}
{{/* Static theme: Use Catppuccin Mauve for active (user favorite) */}}
options=(
  style=round
  width=6.0
  hidpi=on
  active_color=0xff{{ trimPrefix "#" .theme.colors.mauve }}
  inactive_color=0xff{{ trimPrefix "#" .theme.colors.surface0 }}
)
{{- end }}

borders "${options[@]}"
