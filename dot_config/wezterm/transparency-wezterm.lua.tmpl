{{- /* WezTerm Transparency - Generated by theme system */ -}}
{{- /* This file is managed by chezmoi on bootstrap, and by theme-manager.py during runtime */ -}}
{{- $transparency := .theme.transparency | default 0 -}}
{{- if gt $transparency 0 }}
-- Transparency: {{ $transparency }}%

return {
  enabled = true,
  opacity = {{ divf (float64 $transparency) 100.0 }},
  blur = 80,
}
{{- else }}
-- Transparency: disabled

return {
  enabled = false,
}
{{- end }}
